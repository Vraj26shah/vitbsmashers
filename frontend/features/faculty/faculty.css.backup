@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

:root {
    /* Using shared primary-color */
    /* Using shared secondary-color */
    /* Using shared accent-color */
    --accent-dark: #2980b9;
    /* Using shared light-color */
    --dark-color: #1a252f;
    --success-color: #2ecc71;
    --warning-color: #f39c12;
    --gold-color: #FFD700;
    --premium-color: #9b59b6;
    --sidebar-width: 280px;
    --header-height: 80px;
    --transition-speed: 0.3s;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    
    color: var(--light-color1);
    min-height: 100vh;
    overflow-x: hidden;
}

body.no-scroll {
    overflow: hidden;
}

/* Header Styles */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    padding: 0 20px;
    z-index: 1000;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-bottom: 2px solid var(--accent-color);
}

.menu-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-right: 15px;
    transition: var(--transition-speed);
}

.menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    
    margin: 2px 0;
    border-radius: 10px;
    transition: var(--transition-speed);
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 60px;
    width: auto;
    margin-right: 15px;
}

.logo i {
    font-size: 32px;
    color: var(--light-color1);
    margin-right: 10px;
}

.logo-text h1 {
    font-size: 24px;
    font-weight: 700;
    color: var(--light-color1);
}

.logo-text span {
    font-size: 14px;
    color: var(--success-color);
    display: block;
}

.header-actions {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 15px;
}

.user-profile {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    
    transition: var(--transition-speed);
}

.user-profile:hover {
    
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 18px;
    margin-right: 10px;
    border: 2px solid var(--light-color);
    overflow: hidden;
}

.user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.user-name {
    font-weight: 500;
    font-size: 16px;
}

.map-access {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(52, 152, 219, 0.2);
    color: var(--light-color1);
    font-size: 20px;
    transition: var(--transition-speed);
    text-decoration: none;
    z-index: 1002;
    visibility: visible;
    flex-shrink: 0;
}

.map-access:hover {
    
}

/* Sidebar Navigation */
.sidebar {
    position: fixed;
    top: var(--header-height);
    left: calc(-1 * var(--sidebar-width));
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    
    backdrop-filter: blur(10px);
    z-index: 900;
    transition: var(--transition-speed);
    border-right: 2px solid var(--accent-color);
    box-shadow: 5px 0 30px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    padding: 20px 0;
}

.sidebar.active {
    left: 0;
}

.sidebar-menu {
    list-style: none;
}

.sidebar-menu li {
    margin-bottom: 5px;
}

.sidebar-menu a {
    display: flex;
    align-items: center;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    color: var(--light-color1);
    text-decoration: none;
    font-size: 15px;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
}

.sidebar-menu a:hover, .sidebar-menu a.active {
    
    border-left: 3px solid var(--accent-color);
}

.sidebar-menu i {
    font-size: 20px;
    margin-right: 12px;
    width: 22px;
    text-align: center;
    color: var(--light-color1);
}

.sidebar-title {
    padding: 18px 20px 8px;
    font-size: 15px;
    color: var(--light-color1);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Main Content */
.main-content {
    flex: 1;
    padding: calc(var(--header-height) + 30px) 40px 40px;
    transition: var(--transition-speed);
    margin-left: 0;
    max-width: 1400px;
    margin: 0 auto;
}

.sidebar.active + .main-content {
    margin-left: var(--sidebar-width);
}

.sidebar.active ~ .main-content::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 899;
    display: none;
}
.page-title {
    font-size: 32px;
    margin-bottom: 25px;
    color: var(--light-color1);
    position: relative;
    padding-bottom: 12px;
    display: flex;
    align-items: center;
}

.page-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 70px;
    height: 3px;
    
    border-radius: 10px;
}


/* Tabs */
.tabs {
    display: flex;
    gap: 10px;
    margin-bottom: 25px;
    
    border-radius: 10px;
    padding: 15px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
    flex-wrap: wrap;
}

.tab-btn {
    
    color: var(--light-color1);
    border: none;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 16px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1;
    min-width: 200px;
    justify-content: center;
    z-index: 10;
    opacity: 1;
    visibility: visible;
}

.tab-btn.active, .tab-btn:hover {
    
    color: white;
    transform: translateY(-5px);
}

.tab-btn i {
    font-size: 18px;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
    animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Search Container */
.search-container {
    
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 25px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
}

.search-group {
    position: relative;
    display: flex;
    align-items: center;
}

.search-icon {
    position: absolute;
    left: 15px;
    color: var(--light-color1);
    font-size: 20px;
    z-index: 2;
}

.search-input {
    width: 100%;
    padding: 14px 14px 14px 45px;
    
    border: 1px solid rgba(52, 152, 219, 0.3);
    border-radius: 10px;
    color: var(--light-color1);
    font-size: 16px;
    transition: all 0.3s ease;
}

.search-input:focus {
    outline: none;
    border-color: var(--light-color1);
    box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.3);
}

.search-results {
    color: var(--light-color1);
    margin-top: 10px;
    font-size: 14px;
    text-align: right;
    font-weight: 500;
}

/* Faculty Registration Form */
.faculty-registration {
    
    border-radius: 10px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
}

.form-title {
    font-size: 24px;
    margin-bottom: 20px;
    color: var(--light-color1);
    display: flex;
    align-items: center;
    gap: 10px;
}

.form-row {
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
    flex-wrap: wrap;
}

.form-group {
    flex: 1;
    min-width: 300px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--light-color1);
}

.form-group label.required::after {
    content: ' *';
    color: var(--secondary-color);
}

.form-group input, 
.form-group textarea, 
.form-group select {
    width: 100%;
    padding: 14px;
    
    border: 1px solid rgba(52, 152, 219, 0.3);
    border-radius: 10px;
    color: var(--light-color1);
    font-size: 16px;
    transition: all 0.3s ease;
}

.form-group input:focus, 
.form-group textarea:focus, 
.form-group select:focus {
    outline: none;
    border-color: var(--light-color1);
    box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.3);
}

.form-group textarea {
    min-height: 120px;
    resize: vertical;
}

.submit-btn {
    
    color: white;
    border: none;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
    margin-top: 20px;
    min-width: 100px;
    z-index: 10;
    opacity: 1;
    visibility: visible;
}

.submit-btn:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

/* Faculty Grid */
.faculty-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    margin-bottom: 50px;
}

.faculty-card {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
    transition: all 0.4s ease;
    position: relative;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.faculty-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-color: var(--light-color1);
}

.faculty-info {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.faculty-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
}

.faculty-title {
    font-size: 20px;
    font-weight: 700;
    color: var(--light-color1);
    margin-bottom: 8px;
    line-height: 1.3;
}

.faculty-meta {
    display: flex;
    gap: 12px;
    margin-bottom: 15px;
    flex-wrap: wrap;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 13px;
    color: #aaa;
}

.faculty-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 15px;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    margin-top: auto;
}

.update-btn {
    
    color: var(--warning-color);
    border: 2px solid var(--warning-color);
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    min-width: 100px;
    z-index: 10;
    opacity: 1;
    visibility: visible;
}

.update-btn:hover {
    
    color: white;
    transform: translateY(-5px);
}

/* Admin Panel */
.admin-panel {
    
    border-radius: 10px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
}

.admin-title {
    font-size: 24px;
    margin-bottom: 20px;
    color: var(--warning-color);
    display: flex;
    align-items: center;
    gap: 10px;
}

.admin-tabs {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
    
    border-radius: 10px;
    padding: 8px;
    flex-wrap: wrap;
}

.admin-tab-btn {
    
    color: #aaa;
    border: none;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    flex: 1;
    min-width: 180px;
    z-index: 10;
    opacity: 1;
    visibility: visible;
}

.admin-tab-btn.active, .admin-tab-btn:hover {
    
    color: white;
    transform: translateY(-5px);
}

.admin-tab-content {
    display: none;
}

.admin-tab-content.active {
    display: block;
}

.pending-faculty, .pending-updates {
    margin-top: 20px;
}

.pending-faculty-card, .pending-update-card {
    
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 15px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: flex-start;
}

.pending-faculty-details, .pending-update-details {
    flex: 1;
    min-width: 300px;
}

.pending-faculty-title, .pending-update-title {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--light-color1);
}

.pending-faculty-meta, .pending-update-meta {
    display: flex;
    gap: 15px;
    margin-bottom: 10px;
    flex-wrap: wrap;
}

.pending-faculty-actions, .pending-update-actions {
    display: flex;
    gap: 8px;
    margin-top: 10px;
    flex-wrap: wrap;
}

.action-btn {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    border: none;
    min-width: 80px;
    z-index: 10;
    opacity: 1;
    visibility: visible;
}

.approve-btn {
    
    color: white;
}

.reject-btn {
    
    color: white;
}

.view-btn {
    
    color: white;
}

.action-btn:hover {
    opacity: 0.9;
    transform: translateY(-5px);
}

/* Update Changes Section */
.update-changes {
    
    border-radius: 10px;
    padding: 15px;
    margin-top: 15px;
    border-left: 3px solid var(--accent-color);
}

.update-changes h4 {
    color: var(--light-color1);
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.change-item {
    display: flex;
    margin-bottom: 8px;
    padding-bottom: 8px;
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

.change-field {
    flex: 1;
    font-weight: 500;
    color: var(--light-color1);
}

.change-old {
    flex: 1;
    color: #ff6b6b;
    text-decoration: line-through;
}

.change-new {
    flex: 1;
    color: var(--success-color);
    font-weight: 500;
}

/* Status Indicator */
.status-indicator {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-size: 12px;
    font-weight: 600;
    display: inline-block;
}

.status-pending {
    
    color: var(--warning-color);
}

.status-approved {
    
    color: var(--success-color);
}

/* Success Message */
.success-message {
    
    border: 1px solid var(--success-color);
    color: var(--success-color);
    padding: 15px;
    border-radius: 10px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .faculty-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
    .main-content {
        padding: calc(var(--header-height) + 20px) 20px 20px;
        max-width: 1000px;
    }
}

@media (max-width: 992px) {
    .sidebar {
        width: 240px;
        left: -240px;
    }
    .sidebar.active {
        left: 0;
    }
}

@media (max-width: 768px) {
    :root {
        --header-height: 70px;
    }
    .header {
        padding: 0 15px;
        height: 70px;
    }
    .header-actions {
        gap: 8px;
    }
    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }
    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }
    .logo img {
        height: 40px;
        margin-right: 8px;
    }
    .logo-text h1 {
        font-size: 18px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .user-name {
        display: none;
    }
    .user-profile {
        padding: 5px;
    }
    .user-avatar {
        width: 35px;
        height: 35px;
        font-size: 14px;
    }
    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }
    .sidebar {
        width: 100%;
        left: -100%;
    }
    .sidebar.active {
        left: 0;
    }
    .sidebar.active ~ .main-content::before {
        display: block;
    }
    .main-content {
        padding: calc(var(--header-height) + 15px) 18px 20px;
    }
    .page-title {
        font-size: 24px;
        margin-bottom: 20px;
    }
    .tabs {
        flex-direction: column;
    }
    .tab-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 14px;
        min-width: 100%;
    }
    .form-row {
        flex-direction: column;
        gap: 15px;
    }
    .faculty-registration, .admin-panel {
        padding: 20px;
    }
    .pending-faculty-card, .pending-update-card {
        flex-direction: column;
    }
    .submit-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 14px;
        min-width: 80px;
    }
    .update-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 80px;
    }
    .action-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 70px;
    }
}

@media (max-width: 576px) {
    :root {
        --header-height: 60px;
    }
    .header {
        height: 60px;
        padding: 0 12px;
    }
    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }
    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }
    .logo img {
        height: 35px;
        margin-right: 8px;
    }
    .logo-text h1 {
        font-size: 16px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .user-avatar {
        width: 30px;
        height: 30px;
        font-size: 12px;
    }
    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }
    .main-content {
        padding: calc(var(--header-height) + 12px) 15px 15px;
    }
    .page-title {
        font-size: 22px;
        padding-bottom: 10px;
    }
    .page-title i {
        font-size: 24px;
    }
    .faculty-grid {
        grid-template-columns: 1fr;
        gap: 18px;
    }
    .tab-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 14px;
        min-width: 100%;
    }
    .form-group {
        min-width: 100%;
    }
    .faculty-registration, .admin-panel {
        padding: 15px;
    }
    .submit-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 14px;
        min-width: 80px;
    }
    .update-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 80px;
    }
    .action-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 70px;
    }
}

@media (max-width: 400px) {
    .logo-text h1 {
        font-size: 14px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .page-title {
        font-size: 20px;
    }
    .faculty-title {
        font-size: 16px;
    }
    .tab-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 80px;
    }
    .submit-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 70px;
    }
    .update-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 12px;
        min-width: 70px;
    }
    .action-btn {

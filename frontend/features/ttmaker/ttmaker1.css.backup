@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

:root {
    /* Using shared primary-color */
    /* Using shared secondary-color */
    /* Using shared accent-color */
    --accent-dark: #2980b9;
    /* Using shared light-color */
    --dark-color: #1a252f;
    --success-color: #2ecc71;
    --warning-color: #f39c12;
    --premium-color: #9b59b6;
    --sidebar-width: 280px;
    --header-height: 80px;
    --transition-speed: 0.3s;
    --tentative-color: #f1c40f;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    
    color: var(--light-color1);
    min-height: 100vh;
    overflow-x: hidden;
}

body.no-scroll {
    overflow: hidden;
}

/* Header Styles */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    padding: 0 20px;
    z-index: 1000;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-bottom: 2px solid var(--accent-color);
}

.menu-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-right: 15px;
    transition: var(--transition-speed);
}

.menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    
    margin: 2px 0;
    border-radius: 10px;
    transition: var(--transition-speed);
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 60px;
    width: auto;
    margin-right: 15px;
}

.logo i {
    font-size: 32px;
    color: var(--light-color1);
    margin-right: 10px;
}

.logo-text h1 {
    font-size: 24px;
    font-weight: 700;
    color: var(--light-color1);
}

.logo-text span {
    font-size: 14px;
    color: var(--success-color);
    display: block;
}

.header-actions {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 15px;
}

.user-profile {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    
    transition: var(--transition-speed);
}

.user-profile:hover {
    
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 18px;
    margin-right: 10px;
    border: 2px solid var(--light-color);
    overflow: hidden;
}

.user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.user-name {
    font-weight: 500;
    font-size: 16px;
}

.map-access {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(52, 152, 219, 0.2);
    color: var(--light-color1);
    font-size: 20px;
    transition: var(--transition-speed);
    text-decoration: none;
    z-index: 1002;
    visibility: visible;
    flex-shrink: 0;
}

.map-access:hover {
    
}

/* Sidebar Navigation */
.sidebar {
    position: fixed;
    top: var(--header-height);
    left: calc(-1 * var(--sidebar-width));
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    
    backdrop-filter: blur(10px);
    z-index: 900;
    transition: var(--transition-speed);
    border-right: 2px solid var(--accent-color);
    box-shadow: 5px 0 30px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    padding: 20px 0;
}

.sidebar.active {
    left: 0;
}

.sidebar-menu {
    list-style: none;
}

.sidebar-menu li {
    margin-bottom: 5px;
}

.sidebar-menu a {
    display: flex;
    align-items: center;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    color: var(--light-color1);
    text-decoration: none;
    font-size: 15px;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
}

.sidebar-menu a:hover,
.sidebar-menu a.active {
    
    border-left: 3px solid var(--accent-color);
}

.sidebar-menu i {
    font-size: 20px;
    margin-right: 12px;
    width: 22px;
    text-align: center;
    color: var(--light-color1);
}

.sidebar-title {
    padding: 18px 20px 8px;
    font-size: 15px;
    color: var(--light-color1);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Main Content */
.main-content {
    flex: 1;
    padding: calc(var(--header-height) + 30px) 40px 40px;
    transition: var(--transition-speed);
    margin-left: 0;
    max-width: 1400px;
    margin: 0 auto;
}

.sidebar.active + .main-content {
    margin-left: var(--sidebar-width);
}

.sidebar.active ~ .main-content::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 899;
    display: none;
}

.page-title {
    font-size: 28px;
    margin-bottom: 25px;
    color: var(--light-color1);
    position: relative;
    padding-bottom: 12px;
    display: flex;
    align-items: center;
}

.page-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 70px;
    height: 3px;
    
    border-radius: 10px;
}

/* Timetable Maker Styles */
.timetable-container {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 25px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 2px solid var(--accent-color);
    margin-bottom: 40px;
}

.timetable-header {
    text-align: center;
    margin-bottom: 25px;
}

.timetable-header h1 {
    font-size: 2rem;
    color: var(--light-color1);
    margin-bottom: 12px;
}

.timetable-header p {
    font-size: 1rem;
    color: #ddd;
    margin-bottom: 20px;
    line-height: 1.6;
}

/* Usage Notes Section */
.usage-notes-container {
    
    border: 2px solid var(--accent-color);
    border-radius: 10px;
    margin: 20px 0;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(52, 152, 219, 0.2);
}

.usage-notes-header {
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    display: flex;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.usage-notes-header:hover {
    
}

.usage-notes-header i {
    font-size: 20px;
    color: var(--light-color1);
}

.usage-notes-header h3 {
    color: var(--light-color1);
    font-size: 18px;
    font-weight: 600;
    margin: 0;
}

.usage-notes-content {
    padding: 20px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 15px;
    transition: all 0.3s ease;
}

.usage-notes-content.collapsed {
    display: none;
}

.note-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 12px;
    
    border-radius: 10px;
    border-left: 3px solid var(--accent-color);
    transition: all 0.3s ease;
}

.note-item:hover {
    
    transform: translateX(5px);
}

.note-icon {
    flex-shrink: 0;
    width: 35px;
    height: 35px;
    
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 2px;
}

.note-icon i {
    color: var(--light-color1);
    font-size: 14px;
}

.note-text {
    flex: 1;
    color: var(--light-color1);
    font-size: 14px;
    line-height: 1.5;
}

.note-text strong {
    color: var(--light-color1);
    font-weight: 600;
}

.usage-notes-toggle {
    width: 100%;
    
    border: none;
    padding: 12px;
    color: var(--light-color1);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.3s ease;
    border-top: 1px solid rgba(52, 152, 219, 0.2);
}

.usage-notes-toggle:hover {
    
    color: var(--light-color1);
}

.usage-notes-toggle i {
    transition: transform 0.3s ease;
}

.usage-notes-toggle.collapsed i {
    transform: rotate(180deg);
}

/* Control Panel */
.control-panel {
    display: flex;
    flex-direction: column;
    gap: 20px;
    
    border-radius: 10px;
    padding: 20px;
    width: 100%;
    margin: 0 auto 20px;
    border: 1px solid rgba(52, 152, 219, 0.3);
}

.search-section {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    align-items: center;
    margin-bottom: 15px;
}

.search-container {
    flex: 1;
    min-width: 250px;
    position: relative;
}

.search-box {
    width: 100%;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border: 1px solid rgba(52, 152, 219, 0.3);
    border-radius: 10px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    outline: none;
    
    color: var(--light-color1);
}

.search-box:focus {
    border-color: var(--light-color1);
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.3);
}

.btn-search {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    
    color: white;
    min-width: 120px;
}

.btn-search:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.actions-section {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 12px;
    width: 100%;
}

.stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 15px;
    width: 100%;
}

.stats-card {
    
    border-radius: 10px;
    padding: 15px;
    text-align: center;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
}

.stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.stats-card .number {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--light-color1);
    margin-bottom: 5px;
}

.stats-card .label {
    font-size: 0.95rem;
    color: #ddd;
}

.timetable-content {
    width: 100%;
    overflow-x: auto;
    margin-bottom: 25px;
    border-radius: 10px;
    
    padding: 10px;
    border: 1px solid rgba(52, 152, 219, 0.3);
}

table {
    width: 100%;
    border-collapse: collapse;
    min-width: 1000px;
}

th, td {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
    position: relative;
}

th {
    
    color: white;
    font-weight: 600;
    position: sticky;
    top: 0;
    font-size: 1rem;
}

tr:nth-child(even) {
    background-color: rgba(255, 255, 255, 0.05);
}

.selectable {
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    font-weight: 500;
    font-size: 1rem;
    height: 60px;
    color: white;
}

.selectable:hover {
    background-color: rgba(52, 152, 219, 0.3);
    transform: scale(1.03);
}

.occupied {
    color: white;
    font-weight: 600;
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
}

.occupied::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    
}

.tentative {
    position: relative;
    color: #333;
    font-weight: 600;
    overflow: hidden;
}

.tentative::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
        -45deg,
        rgba(255, 255, 255, 0.7),
        rgba(255, 255, 255, 0.7) 10px,
        var(--tentative-color) 10px,
        var(--tentative-color) 20px
    );
    z-index: 1;
}

.tentative .slot-code {
    position: relative;
    z-index: 2;
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    display: inline-block;
    font-weight: bold;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.tentative-badge {
    position: absolute;
    top: 5px;
    right: 5px;
    
    color: white;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: bold;
    z-index: 3;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.lunch {
    background-color: rgba(255, 236, 209, 0.3);
    font-weight: 700;
    color: #fff;
}

.selected-slots-container {
    width: 100%;
    margin-bottom: 25px;
}

.section-title {
    font-size: 1.4rem;
    color: var(--light-color1);
    margin-bottom: 15px;
    text-align: center;
    position: relative;
    padding-bottom: 8px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    
    border-radius: 10px;
}

.selected-slots {
    
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
}

.slot-list {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 15px;
}

.slot-item {
    
    padding: 15px;
    border-radius: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    border-left: 4px solid var(--accent-color);
}

.slot-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.slot-info {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.slot-codes {
    font-weight: 600;
    margin-bottom: 5px;
    color: var(--light-color1);
}

.slot-subject {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 5px;
    color: white;
}

.slot-details {
    font-size: 0.85rem;
    color: #ddd;
    margin-top: 5px;
}

.remove-btn {
    
    color: white;
    border: none;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    margin-left: 10px;
    flex-shrink: 0;
    font-size: 0.85rem;
}

.remove-btn:hover {
    
    transform: rotate(90deg);
}

/* Modal styles */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2000;
}

.modal-content {
    
    border-radius: 10px;
    padding: 30px;
    max-width: 500px;
    width: 90%;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    position: relative;
    border: 2px solid var(--accent-color);
}

.modal h2 {
    color: var(--light-color1);
    margin-bottom: 20px;
    font-size: 1.6rem;
    text-align: center;
}

.modal p {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 20px;
    color: #ddd;
}

.close-modal {
    position: absolute;
    top: 10px;
    right: 10px;
    
    color: white;
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.close-modal:hover {
    
    transform: rotate(90deg);
}

/* Button styles */
.btn {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    min-width: 120px;
}

.btn-primary {
    
    color: white;
}

.btn-primary:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.btn-secondary {
    
    color: white;
}

.btn-secondary:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.btn-tentative {
    
    color: var(--primary-color);
}

.btn-tentative:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.btn-danger {
    
    color: white;
}

.btn-danger:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

/* Color picker */
.color-palette {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin: 20px 0;
    flex-wrap: wrap;
}

.color-option {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    position: relative;
}

.color-option:hover {
    transform: scale(1.1);
}

.color-option.active {
    transform: scale(1.15);
    box-shadow: 0 0 0 3px var(--light-color), 0 0 0 5px var(--accent-color);
}

.color-option.disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.color-option.disabled::after {
    content: "âœ–";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--secondary-color);
    font-size: 1.2rem;
    font-weight: bold;
}

.keyboard-hint {
    
    padding: 10px;
    border-radius: 10px;
    margin-top: 15px;
    font-size: 0.85rem;
    color: var(--light-color1);
    text-align: center;
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: 500;
    color: var(--light-color1);
}

.form-group input {
    width: 100%;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    
    border: 1px solid rgba(52, 152, 219, 0.3);
    border-radius: 10px;
    color: var(--light-color1);
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.form-group input:focus {
    outline: none;
    border-color: var(--light-color1);
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.3);
}

.optional-label {
    font-size: 0.8rem;
    color: #ddd;
    font-weight: normal;
    margin-left: 5px;
}

/* Rainbow color picker */
.rainbow-picker {
    width: 100%;
    height: 36px;
    border-radius: 10px;
    margin: 12px 0;
    background: linear-gradient(to right, 
        #ff0000, #ff8000, #ffff00, #80ff00, 
        #00ff00, #00ff80, #00ffff, #0080ff, 
        #0000ff, #8000ff, #ff00ff, #ff0080);
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.rainbow-selector {
    position: absolute;
    width: 18px;
    height: 18px;
    border: 2px solid var(--light-color);
    border-radius: 50%;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    pointer-events: none;
}

.color-picker {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 12px;
}

.color-preview-large {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    border: 2px solid #ddd;
}

.color-input {
    flex: 1;
    padding: 8px;
    border: 1px solid rgba(52, 152, 219, 0.3);
    border-radius: 10px;
    font-size: 0.95rem;
    
    color: var(--light-color1);
}

/* Tentative controls */
.tentative-controls {
    display: flex;
    gap: 6px;
    margin-top: 15px;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    max-width: 100%;
    overflow: visible;
    opacity: 1;
    visibility: visible;
}

.tentative-controls .btn {
    min-width: 70px;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    font-size: 0.85rem;
    z-index: 10;
}

.tentative-tag {
    
    color: var(--primary-color);
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-size: 0.85rem;
    font-weight: 600;
}

/* Tentative slots section */
.tentative-slots-container {
    width: 100%;
    margin-bottom: 25px;
}

.tentative-slot-item {
    
    padding: 12px;
    border-radius: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    border-left: 4px solid var(--warning-color);
}

.tentative-info {
    display: flex;
    align-items: center;
    gap: 8px;
}

.tentative-color {
    width: 20px;
    height: 20px;
    border-radius: 10px;
}

.tentative-actions {
    display: flex;
    gap: 8px;
}

.empty-state {
    
    border-radius: 10px;
    padding: 25px;
    text-align: center;
    color: #ddd;
    margin: 15px 0;
}

.empty-state i {
    font-size: 2.5rem;
    margin-bottom: 12px;
    color: rgba(206, 212, 218, 0.5);
}

.action-bar {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
}

.color-group-indicator {
    position: absolute;
    top: 5px;
    left: 5px;
    
    color: var(--primary-color);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: bold;
    z-index: 4;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.tentative-group {
    margin-bottom: 20px;
    padding: 12px;
    
    border-radius: 10px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.tentative-group-header {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    padding-bottom: 8px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

/* Download dropdown */
.download-dropdown {
    position: relative;
    display: inline-block;
}

.download-dropdown-content {
    display: none;
    position: absolute;
    background-color: rgba(44, 62, 80, 0.95);
    min-width: 180px;
    border-radius: 10px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    z-index: 100;
    overflow: hidden;
    top: 100%;
    right: 0;
    margin-top: 8px;
    border: 1px solid var(--accent-color);
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(-5px); }
    to { opacity: 1; transform: translateY(0); }
}

.download-dropdown-content a {
    color: var(--light-color1);
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    text-decoration: none;
    display: block;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s ease;
}

.download-dropdown-content a:hover {
    background-color: rgba(52, 152, 219, 0.3);
}

.download-dropdown-content a i {
    width: 20px;
    text-align: center;
}

.download-dropdown.active .download-dropdown-content {
    display: block;
}

/* Footer */
footer {
    width: 100%;
    text-align: center;
    padding: 25px 0;
    color: #ddd;
    font-size: 0.95rem;
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 15px;
}

.creator {
    font-weight: 600;
    color: var(--light-color1);
}

/* Selection counter */
.selection-counter {
    position: absolute;
    top: 5px;
    right: 5px;
    
    color: var(--primary-color);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: bold;
    z-index: 2;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

/* Highlighted slot */
.highlighted {
    animation: pulse 2s infinite;
    box-shadow: 0 0 0 2px var(--accent-color);
}

@keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(52, 152, 219, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(52, 152, 219, 0); }
    100% { box-shadow: 0 0 0 0 rgba(52, 152, 219, 0); }
}

.mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 800;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.mobile-overlay.active {
    opacity: 1;
    visibility: visible;
}

/* Responsive Design */
@media (min-width: 768px) {
    :root {
        --header-height: 70px;
    }

    .header {
        padding: 0 25px;
    }

    .logo img {
        height: 55px;
    }

    .logo-text h1 {
        font-size: 22px;
    }

    .logo-text span {
        font-size: 13px;
    }

    .user-name {
        font-size: 15px;
    }

    .page-title {
        font-size: 26px;
    }
}

@media (min-width: 992px) {
    :root {
        --header-height: 80px;
    }

    .header {
        padding: 0 30px;
    }

    .logo img {
        height: 60px;
    }

    .logo-text h1 {
        font-size: 24px;
    }

    .logo-text span {
        font-size: 14px;
    }

    .user-name {
        font-size: 16px;
    }

    .sidebar {
        width: var(--sidebar-width);
    }

    .main-content {
        padding: calc(var(--header-height) + 30px) 30px 30px;
    }
}

@media (min-width: 1200px) {
    .main-content {
        padding: calc(var(--header-height) + 40px) 40px 40px;
    }
}

@media (max-width: 1200px) {
    .main-content {
        max-width: 1000px;
    }
}

@media (max-width: 992px) {
    .sidebar {
        width: 240px;
        left: -240px;
    }

    .sidebar.active {
        left: 0;
    }
}

@media (max-width: 768px) {
    :root {
        --header-height: 70px;
    }

    .header {
        padding: 0 15px;
    }

    .header-actions {
        gap: 8px;
    }

    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }

    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }

    .logo img {
        height: 40px;
        margin-right: 8px;
    }

    .logo-text h1 {
        font-size: 18px;
    }

    .logo-text span {
        font-size: 10px;
    }

    .user-name {
        display: none;
    }

    .user-profile {
        padding: 5px;
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        font-size: 14px;
    }

    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }

    .sidebar {
        width: 100%;
        left: -100%;
    }

    .sidebar.active {
        left: 0;
    }

    .sidebar.active ~ .main-content::before {
        display: block;
    }

    .main-content {
        padding: calc(var(--header-height) + 15px) 18px 20px;
        margin-left: 0;
    }

    .page-title {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .actions-section {
        grid-template-columns: 1fr;
    }

    .stats-row {
        grid-template-columns: repeat(2, 1fr);
    }

    .search-section {
        flex-direction: column;
    }

    .btn-search {
        width: 100%;
        min-width: 100px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 0.9rem;
    }
    
    .usage-notes-content {
        grid-template-columns: 1fr;
        padding: 15px;
    }
    
    .note-item {
        padding: 10px;
    }
    
    .note-icon {
        width: 30px;
        height: 30px;
    }
    
    .note-text {
        font-size: 13px;
    }
    
    .usage-notes-header {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    
    .usage-notes-header h3 {
        font-size: 16px;
    }

    th, td {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 0.9rem;
    }

    .slot-list {
        grid-template-columns: 1fr;
    }

    .tentative-controls {
        flex-direction: column;
    }

    .tentative-controls .btn {
        width: 100%;
        min-width: 70px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 0.8rem;
    }
}


@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

:root {
    /* Using shared primary-color */
    /* Using shared secondary-color */
    /* Using shared accent-color */
    --accent-dark: #2980b9;
    /* Using shared light-color */
    --dark-color: #1a252f;
    --success-color: #2ecc71;
    --warning-color: #f39c12;
    --gold-color: #FFD700;
    --premium-color: #9b59b6;
    --sidebar-width: 280px;
    --header-height: 80px;
    --transition-speed: 0.3s;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    
    color: var(--light-color1);
    min-height: 100vh;
    overflow-x: hidden;
}

body.no-scroll {
    overflow: hidden;
}

/* Header Styles */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    padding: 0 20px;
    z-index: 1000;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-bottom: 2px solid var(--accent-color);
}

.menu-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-right: 15px;
    transition: var(--transition-speed);
}

.menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    
    margin: 2px 0;
    border-radius: 10px;
    transition: var(--transition-speed);
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 60px;
    width: auto;
    margin-right: 15px;
}

.logo i {
Font-size: 32px;
color: var(--light-color1);
margin-right: 10px;
}

.logo-text h1 {
    font-size: 24px;
    font-weight: 700;
    color: var(--light-color1);
}

.logo-text span {
    font-size: 14px;
    color: var(--success-color);
    display: block;
}

.header-actions {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 15px;
}

.user-profile {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    
    transition: var(--transition-speed);
}

.user-profile:hover {
    
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 18px;
    margin-right: 10px;
    border: 2px solid var(--light-color);
    overflow: hidden;
}

.user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.user-name {
    font-weight: 500;
    font-size: 16px;
}

.map-access {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(52, 152, 219, 0.2);
    color: var(--light-color1);
    font-size: 20px;
    transition: var(--transition-speed);
    text-decoration: none;
    z-index: 1002;
    visibility: visible;
    flex-shrink: 0 biz;
}

.map-access:hover {
    
}
.page-title {
    font-size: 32px;
    margin-bottom: 25px;
    color: var(--light-color1);
    position: relative;
    padding-bottom: 12px;
    display: flex;
    align-items: center;
}

.page-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 70px;
    height: 3px;
    
    border-radius: 10px;
}


/* Sidebar Navigation */
.sidebar {
    position: fixed;
    top: var(--header-height);
    left: calc(-1 * var(--sidebar-width));
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    
    backdrop-filter: blur(10px);
    z-index: 900;
    transition: var(--transition-speed);
    border-right: 2px solid var(--accent-color);
    box-shadow: 5px 0 30px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    padding: 20px 0;
}

.sidebar.active {
    left: 0;
}

.sidebar-menu {
    list-style: none;
}

.sidebar-menu li {
    margin-bottom: 5px;
}

.sidebar-menu a {
    display: flex;
    align-items: center;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    color: var(--light-color1);
    text-decoration: none;
    font-size: 15px;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
}

.sidebar-menu a:hover,
.sidebar-menu a.active {
    
    border-left: 3px solid var(--accent-color);
}

.sidebar-menu i {
    font-size: 20px;
    margin-right: 12px;
    width: 22px;
    text-align: center;
    color: var(--light-color1);
}

.sidebar-title {
    padding: 18px 20px 8px;
    font-size: 15px;
    color: var(--light-color1);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Main Content */
.main-content {
    flex: 1;
    padding: calc(var(--header-height) + 30px) 40px 40px;
    transition: var(--transition-speed);
    margin-left: 0;
    max-width: 1400px;
    margin: 0 auto;
}

.sidebar.active + .main-content {
    margin-left: var(--sidebar-width);
}

/* Profile Section */
.profile-section {
    display: none;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s ease;
}

.profile-section.active {
    display: block;
    opacity: 1;
    transform: translateY(0);
}

.profile-card {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 2px solid var(--accent-color);
    margin-bottom: 30px;
}

.profile-header {
    padding: 25px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    
}

.profile-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    font-weight: bold;
    color: white;
    margin-bottom: 20px;
    border: 4px solid var(--light-color);
    position: relative;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
}

.profile-avatar:hover {
    transform: scale(1.05);
    box-shadow: 0 0 15px rgba(52, 152, 219, 0.5);
}

.profile-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.avatar-edit {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    
    text-align: center;
    padding: 8px;
    font-size: 12px;
    opacity: 0;
    transition: varà¨¸ 0.3s ease;
}

.profile-avatar:hover .avatar-edit {
    opacity: 1;
}

.profile-info h2 {
    font-size: 28px;
    margin-bottom: 8px;
    color: var(--light-color1);
}

.profile-info p {
    font-size: 16px;
    color: var(--light-color1);
    margin-bottom: 15px;
}

.profile-stats {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
    margin-top: 15px;
    width: 100%;
}

.stat-item {
    text-align: center;
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    min-width: 110px;
    flex: 1;
    max-width: 140px;
    transition: all 0.3s ease;
}

.stat-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.stat-value {
    font-size: 22px;
    font-weight: 700;
    color: var(--light-color1);
}

.stat-label {
    font-size: 14px;
    color: var(--light-color1);
}

.profile-details {
    padding: 20px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
}

.detail-card {
    
    border-radius: 10px;
    padding: 20px;
    border: 1px solid var(--accent-color);
    transition: all 0.4s ease;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.detail-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.detail-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(236, 240, 241, 0.2);
    padding-bottom: 12px;
}

.detail-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--light-color1);
}

.edit-btn {
    
    border: none;
    color: var(--light-color1);
    width: 34px;
    height: 34px;
    border-radius: 50%;
    cursor: pointer;
    transition: var(--transition-speed);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
}

.edit-btn:hover {
    
    color: white;
    transform: rotate(15deg);
}

.detail-content {
    line-height: 1.6;
}

.detail-item {
    display: flex;
    flex-direction: column;
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px dashed rgba(236, 240, 241, 0.1);
}

.detail-label {
    font-weight: 500;
    color: var(--light-color1);
    font-size: 14px;
    margin-bottom: 4px;
}

.detail-value {
    color: #ddd;
    font-size: 14px;
}

.fixed-field {
    color: var(--light-color1);
    font-weight: 600;
    font-size: 14px;
    position: relative;
}

.fixed-field::after {
    content: 'ðŸ”’';
    font-size: 10px;
    margin-left: 5px;
    opacity: 0.7;
}

.edit-form {
    display: none;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px dashed rgba(236, 240, 241, 0.2);
}

.time-schedule {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px dashed rgba(236, 240, 241, 0.2);
}

.schedule-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    margin-top: 12px;
}

.schedule-item {
    
    border-radius: 10px;
    padding: 12px;
    border: 1px solid rgba(52, 152, 219, 0.3);
    position: relative;
}

.schedule-item .delete-btn {
    position: absolute;
    top: 5px;
    right: 5px;
    
    color: white;
    border: none;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
}

.schedule-item .delete

-btn:hover {
    
}

.schedule-time {
    font-weight: 600;
    color: var(--light-color1);
    margin-bottom: 4px;
    font-size: 14px;
}

.schedule-subject {
    font-size: 14px;
}

.purchased-courses-section {
    padding: 0 20px 20px;
}

.purchased-courses-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.refresh-btn {
    
    color: var(--light-color1);
    border: none;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
}

.refresh-btn:hover {
    
    color: white;
}

.purchased-courses-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
}

.purchased-course-card {
    
    border-radius: 10px;
    padding: 20px;
    border: 1px solid rgba(52, 152, 219, 0.3);
    transition: all 0.4s ease;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
}

.purchased-course-card:hover {
    transform: translateY(-5px);
    border-color: var(--light-color1);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.purchased-course-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
}

.purchased-course-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--light-color1);
    margin-bottom: 10px;
}

.expand-btn {
    display: flex;
    align-items: center;
    
    border: none;
    color: var(--light-color1);
    font-size: 24px;
    cursor: pointer;
    transition: transform 0.3s ease;
    z-index: 10;
    opacity: 1;
    visibility: visible;
    min-width: 40px;
}

.expand-btn:hover {
    transform: scale(1.1);
}

.expand-btn i {
    font-size: 24px;
}

.expand-btn.expanded {
    transform: rotate(180deg);
}

.purchased-course-info {
    font-size: 14px;
    color: #ddd;
    margin-bottom: 15px;
    display: flex;
    justify-content: space-between;
}

.course-progress {
    height: 6px;
    
    border-radius: 10px;
    margin: 12px 0;
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    
    border-radius: 10px;
    transition: width 0.5s ease;
}

.course-meta {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: #aaa;
    margin-top: 8px;
}

.purchased-course-link {
    display: inline-block;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    
    color: var(--light-color1);
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    width: 100%;
    text-align: center;
    margin-top: 12px;
    font-size: 14px;
}

.purchased-course-link:hover {
    
    color: white;
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.course-subjects {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease, margin-top 0.3s ease;
    
    border-radius: 10px;
    margin-top: 0;
}

.course-subjects.expanded {
    max-height: 400px;
    margin-top: 15px;
}

.subject-item {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    font-size: 14px;
}

.subject-item:last-child {
    border-bottom: none;
}

.subject-item i {
    color: var(--light-color1);
    margin-right: 8px;
    font-size: 16px;
}

.subject-name {
    flex: 1;
}

.access-btn {
    
    color: white;
    border: none;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    text-decoration: none;
    margin-top: 15px;
    z-index: 10;
    opacity: 1;
    visibility: visible;
    min-width: 100px;
}

.access-btn:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.setup-form {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 25px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 2px solid var(--warning-color);
    margin-bottom: 30px;
    max-width: 700px;
    margin: 0 auto;
    transition: all 0.5s ease;
}

.form-title {
    font-size: 22px;
    color: var(--warning-color);
    margin-bottom: 15px;
    text-align: center;
}

.form-subtitle {
    color: #ddd;
    text-align: center;
    margin-bottom: 20px;
    font-size: 16px;
}

.form-group {
    margin-bottom: 20px;
    position: relative;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--light-color1);
    font-size: 14px;
}

.form-control {
    width: 100%;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    
    border: 1px solid rgba(52, 152, 219, 0.3);
    border-radius: 10px;
    color: var(--light-color1);
    font-size: 14px;
    transition: all 0.3s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--light-color1);
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.3);
}

.form-note {
    color: var(--warning-color);
    font-size: 12px;
    margin-top: 6px;
    font-style: italic;
}

.form-actions {
    display: flex;
    gap: 12px;
    margin-top: 20px;
}

.btn {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    text-align: center;
    font-size: 14px;
}

.btn-primary {
    
    color: white;
}

.btn-primary:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.btn-outline {
    
    border: 2px solid var(--accent-color);
    color: var(--light-color1);
}

.btn-outline:hover {
    
    color: white;
}

.success-animation {
    text-align: center;
    padding: 30px;
    display: none;
}

.success-animation i {
    font-size: 60px;
    color: var(--success-color);
    margin-bottom: 15px;
    animation: bounce 1s ease infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
    40% {transform: translateY(-5px);}
    60% {transform: translateY(-5px);}
}

.success-animation h2 {
    font-size: 24px;
    margin-bottom: 10px;
}

.query-section {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 25px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 2px solid var(--accent-color);
    margin-top: 40px;
}

.section-title {
    font-size: 22px;
    color: var(--light-color1);
    margin-bottom: 20px;
    position: relative;
    padding-bottom: 12px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 70px;
    height: 3px;
    
    border-radius: 10px;
}

.query-form .form-group {
    margin-bottom: 20px;
}

textarea.form-control {
    min-height: 150px;
    resize: vertical;
    font-size: 14px;
}

.success-message {
    
    border: 2px solid var(--success-color);
    border-radius: 10px;
    padding: 20px;
    margin-top: 20px;
    text-align: center;
    display: none;
}

.success-message i {
    font-size: 42px;
    color: var(--success-color);
    margin-bottom: 15px;
}

.success-message h3 {
    font-size: 20px;
    color: var(--light-color1);
    margin-bottom: 10px;
}

.success-message p {
    color: #ddd;
    font-size: 14px;
}

.form-row {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 10px;
}

.form-row .form-group {
    flex: 1;
    margin-bottom: 0;
}

/* Course Grid */
.course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    margin-bottom: 50px;
}

.course-card {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
    transition: all 0.4s ease;
    position: relative;
    cursor: pointer;
    display: flex;
    flex-direction: column;
}

.course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-color: var(--light-color1);
}

.course-image {
    height: 180px;
    width: 100%;
    background-size: cover;
    background-position: center;
    position: relative;
}

.course-info {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.course-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.course-title {
    font-size: 20px;
    font-weight: 700;
    color: var(--light-color1);
    line-height: 1.3;
    flex: 1;
    margin-right: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.subject-count {
    font-size: 12px;
    margin-left: 5px;
    color: var(--light-color1);
}

.course-instructor {
    font-size: 14px;
    color: var(--light-color1);
    margin-bottom: 12px;
}

.mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 800;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.mobile-overlay.active {
    opacity: 1;
    visibility: visible;
}

/* Responsive Design for Profile Content */
@media (min-width: 576px) {
    .profile-header {
        flex-direction: row;
        text-align: left;
        align-items: flex-start;
    }

    .profile-avatar {
        margin-right: 25px;
        margin-bottom: 0;
    }

    .profile-stats {
        justify-content: flex-start;
    }

    .detail-item {
        flex-direction: row;
    }

    .detail-label {

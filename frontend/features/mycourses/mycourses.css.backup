@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

:root {
    /* Using shared primary-color */
    /* Using shared secondary-color */
    /* Using shared accent-color */
    --accent-dark: #2980b9;
    /* Using shared light-color */
    --dark-color: #1a252f;
    --success-color: #2ecc71;
    --warning-color: #f39c12;
    --gold-color: #FFD700;
    --premium-color: #9b59b6;
    --sidebar-width: 280px;
    --header-height: 80px;
    --transition-speed: 0.3s;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    
    color: var(--light-color1);
    min-height: 100vh;
    overflow-x: hidden;
}

body.no-scroll {
    overflow: hidden;
}

/* Header Styles */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    padding: 0 20px;
    z-index: 1000;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-bottom: 2px solid var(--accent-color);
}

.menu-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-right: 15px;
    transition: var(--transition-speed);
}

.menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    
    margin: 2px 0;
    border-radius: 10px;
    transition: var(--transition-speed);
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 60px;
    width: auto;
    margin-right: 15px;
}

.logo i {
    font-size: 32px;
    color: var(--light-color1);
    margin-right: 10px;
}

.logo-text h1 {
    font-size: 24px;
    font-weight: 700;
    color: var(--light-color1);
}

.logo-text span {
    font-size: 14px;
    color: var(--success-color);
    display: block;
}

.header-actions {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 15px;
}

.user-profile {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    
    transition: var(--transition-speed);
}

.user-profile:hover {
    
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 18px;
    margin-right: 10px;
    border: 2px solid var(--light-color);
    overflow: hidden;
}

.user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.user-name {
    font-weight: 500;
    font-size: 16px;
}

.map-access {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(52, 152, 219, 0.2);
    color: var(--light-color1);
    font-size: 20px;
    transition: var(--transition-speed);
    text-decoration: none;
    z-index: 1002;
    visibility: visible;
    flex-shrink: 0;
}

.map-access:hover {
    
}

/* Sidebar Navigation */
.sidebar {
    position: fixed;
    top: var(--header-height);
    left: calc(-1 * var(--sidebar-width));
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    
    backdrop-filter: blur(10px);
    z-index: 900;
    transition: var(--transition-speed);
    border-right: 2px solid var(--accent-color);
    box-shadow: 5px 0 30px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    padding: 20px 0;
}

.sidebar.active {
    left: 0;
}

.sidebar-menu {
    list-style: none;
}

.sidebar-menu li {
    margin-bottom: 5px;
}

.sidebar-menu a {
    display: flex;
    align-items: center;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    color: var(--light-color1);
    text-decoration: none;
    font-size: 15px;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
}

.sidebar-menu a:hover, .sidebar-menu a.active {
    
    border-left: 3px solid var(--accent-color);
}

.sidebar-menu i {
    font-size: 20px;
    margin-right: 12px;
    width: 22px;
    text-align: center;
    color: var(--light-color1);
}

.sidebar-title {
    padding: 18px 20px 8px;
    font-size: 15px;
    color: var(--light-color1);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Main Content */
.main-content {
    flex: 1;
    padding: calc(var(--header-height) + 30px) 40px 40px;
    transition: var(--transition-speed);
    margin-left: 0;
    max-width: 1400px;
    margin: 0 auto;
}

.sidebar.active + .main-content {
    margin-left: var(--sidebar-width);
}

.sidebar.active ~ .main-content::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 899;
    display: none;
}
.page-title {
    font-size: 32px;
    margin-bottom: 25px;
    color: var(--light-color1);
    position: relative;
    padding-bottom: 12px;
    display: flex;
    align-items: center;
}

.page-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 70px;
    height: 3px;
    
    border-radius: 10px;
}


/* Course Grid */
.course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    margin-bottom: 50px;
}

.course-card {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(52, 152, 219, 0.3);
    transition: all 0.4s ease;
    position: relative;
    cursor: pointer;
    display: flex;
    flex-direction: column;
}

.course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-color: var(--light-color1);
}

.course-image {
    height: 180px;
    width: 100%;
    background-size: cover;
    background-position: center;
    position: relative;
}

.course-info {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.course-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.course-title {
    font-size: 20px;
    font-weight: 700;
    color: var(--light-color1);
    line-height: 1.3;
    flex: 1;
    margin-right: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.expand-btn {
    display: flex;
    align-items: center;
    
    border: none;
    color: var(--light-color1);
    font-size: 24px;
    cursor: pointer;
    transition: transform 0.3s ease;
    z-index: 10;
    opacity: 1;
    visibility: visible;
    min-width: 40px;
}

.expand-btn:hover {
    transform: scale(1.1);
}

.expand-btn i {
    font-size: 24px;
}

.subject-count {
    font-size: 12px;
    margin-left: 5px;
    color: var(--light-color1);
}

.course-instructor {
    font-size: 14px;
    color: var(--light-color1);
    margin-bottom: 12px;
}

.course-subjects {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease, margin-top 0.3s ease;
    
    border-radius: 10px;
    margin-top: 0;
}

.course-subjects.expanded {
    max-height: 1000px;
    margin-top: 20px;
}

.subject-item {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
}

.subject-item:last-child {
    border-bottom: none;
}

.subject-item i {
    color: var(--light-color1);
    margin-right: 10px;
    font-size: 18px;
}

.subject-name {
    flex: 1;
}

.access-btn {
    
    color: white;
    border: none;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    text-decoration: none;
    margin-top: 15px;
    z-index: 10;
    opacity: 1;
    visibility: visible;
    min-width: 100px;
}

.access-btn:hover {
    
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
}

.mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 800;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.mobile-overlay.active {
    opacity: 1;
    visibility: visible;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .course-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
    .main-content {
        padding: calc(var(--header-height) + 20px) 20px 20px;
        max-width: 1000px;
    }
}

@media (max-width: 992px) {
    .sidebar {
        width: 240px;
        left: -240px;
    }
    .sidebar.active {
        left: 0;
    }
}

@media (max-width: 768px) {
    :root {
        --header-height: 70px;
    }
    .header {
        padding: 0 15px;
        height: 70px;
    }
    .header-actions {
        gap: 8px;
    }
    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }
    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }
    .logo img {
        height: 40px;
        margin-right: 8px;
    }
    .logo-text h1 {
        font-size: 18px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .user-name {
        display: none;
    }
    .user-profile {
        padding: 5px;
    }
    .user-avatar {
        width: 35px;
        height: 35px;
        font-size: 14px;
    }
    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }
    .sidebar {
        width: 100%;
        left: -100%;
    }
    .sidebar.active {
        left: 0;
    }
    .sidebar.active ~ .main-content::before {
        display: block;
    }
    .main-content {
        padding: calc(var(--header-height) + 15px) 18px 20px;
    }
    .page-title {
        font-size: 24px;
        margin-bottom: 20px;
    }
    .course-grid {
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 20px;
    }
    .expand-btn {
        font-size: 20px;
        min-width: 36px;
    }
    .expand-btn i {
        font-size: 20px;
    }
    .access-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 80px;
    }
}

@media (max-width: 576px) {
    :root {
        --header-height: 60px;
    }
    .header {
        height: 60px;
        padding: 0 12px;
    }
    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }
    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }
    .logo img {
        height: 35px;
        margin-right: 8px;
    }
    .logo-text h1 {
        font-size: 16px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .user-avatar {
        width: 30px;
        height: 30px;
        font-size: 12px;
    }
    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }
    .main-content {
        padding: calc(var(--header-height) + 12px) 15px 15px;
    }
    .page-title {
        font-size: 22px;
        padding-bottom: 10px;
    }
    .course-grid {
        grid-template-columns: 1fr;
        gap: 18px;
    }
    .course-image {
        height: 160px;
    }
    .course-title {
        font-size: 18px;
    }
    .course-instructor {
        font-size: 13px;
    }
    .expand-btn {
        font-size: 20px;
        min-width: 36px;
    }
    .expand-btn i {
        font-size: 20px;
    }
    .access-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 13px;
        min-width: 80px;
    }
}

@media (max-width: 400px) {
    .logo-text h1 {
        font-size: 14px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .page-title {
        font-size: 20px;
    }
    .course-title {
        font-size: 16px;
    }
    .course-instructor {
        font-size: 12px;
    }
    .expand-btn {
        font-size: 18px;
        min-width: 32px;
    }
    .expand-btn i {
        font-size: 18px;
    }
    .access-btn {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
        font-size: 12px;
        min-width: 70px;
    }
    .map-access {
        width: 30px;
        height: 30px;
        font-size: 14px;
    }
}
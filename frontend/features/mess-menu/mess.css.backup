@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

:root {
    /* Using shared primary-color */
    /* Using shared secondary-color */
    /* Using shared accent-color */
    --accent-dark: #2980b9;
    /* Using shared light-color */
    --dark-color: #1a252f;
    --success-color: #2ecc71;
    --warning-color: #f39c12;
    --sidebar-width: 280px;
    --header-height: 80px;
    --transition-speed: 0.3s;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    
    color: var(--light-color1);
    min-height: 100vh;
    overflow-x: hidden;
}

body.no-scroll {
    overflow: hidden;
}

/* Header Styles */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    padding: 0 20px;
    z-index: 1000;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border-bottom: 2px solid var(--accent-color);
}

.menu-toggle {
    width: 40px;
    height: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-right: 15px;
    transition: var(--transition-speed);
}

.menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    
    margin: 2px 0;
    border-radius: 10px;
    transition: var(--transition-speed);
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    height: 60px;
    width: auto;
    margin-right: 15px;
}

.logo-text h1 {
    font-size: 24px;
    font-weight: 700;
    color: var(--light-color1);
}

.logo-text span {
    font-size: 14px;
    color: var(--success-color);
    display: block;
}

.header-actions {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 15px;
}

.user-profile {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    
    transition: var(--transition-speed);
}

.user-profile:hover {
    
}

.user-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 18px;
    margin-right: 10px;
    border: 2px solid var(--light-color);
    overflow: hidden;
}

.user-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.user-name {
    font-weight: 500;
    font-size: 16px;
}

.map-access {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(52, 152, 219, 0.2);
    color: var(--light-color1);
    font-size: 20px;
    transition: var(--transition-speed);
    text-decoration: none;
    z-index: 1002;
    visibility: visible;
    flex-shrink: 0;
}

.map-access:hover {
    
}

/* Sidebar Navigation */
.sidebar {
    position: fixed;
    top: var(--header-height);
    left: calc(-1 * var(--sidebar-width));
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    
    backdrop-filter: blur(10px);
    z-index: 900;
    transition: var(--transition-speed);
    border-right: 2px solid var(--accent-color);
    box-shadow: 5px 0 30px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    padding: 20px 0;
}

.sidebar.active {
    left: 0;
}

.sidebar-menu {
    list-style: none;
}

.sidebar-menu li {
    margin-bottom: 5px;
}

.sidebar-menu a {
    display: flex;
    align-items: center;
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    color: var(--light-color1);
    text-decoration: none;
    font-size: 16px;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
}

.sidebar-menu a:hover, .sidebar-menu a.active {
    
    border-left: 3px solid var(--accent-color);
}

.sidebar-menu i {
    font-size: 22px;
    margin-right: 15px;
    width: 25px;
    text-align: center;
    color: var(--light-color1);
}

.sidebar-title {
    padding: 20px 25px 10px;
    font-size: 16px;
    color: var(--light-color1);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Main Content */
.main-content {
    flex: 1;
    padding: calc(var(--header-height) + 30px) 40px 40px;
    transition: var(--transition-speed);
    margin-left: 0;
    max-width: 1400px;
    margin: 0 auto;
}

.sidebar.active + .main-content {
    margin-left: var(--sidebar-width);
}

.sidebar.active ~ .main-content::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    z-index: 899;
    display: none;
}

/* Mess Menu Section */
.mess-menu-section {
    
    backdrop-filter: blur(10px);
    border-radius: 10px;
    padding: 40px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    border: 2px solid var(--accent-color);
    margin-top: 50px;
}

.section-title {
    font-size: 26px;
    color: var(--light-color1);
    margin-bottom: 25px;
    position: relative;
    padding-bottom: 15px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 3px;
    
    border-radius: 10px;
}

.filter-container {
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    gap: 15px;
}

.filter-container label {
    color: var(--light-color1);
    font-weight: 500;
}

.filter-container select {
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    
    border: 1px solid var(--accent-color);
    border-radius: 10px;
    color: var(--light-color1);
    font-size: 16px;
    width: 200px;
    cursor: pointer;
}

.mess-menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
}

.mess-card {
    
    border-radius: 10px;
    padding: 25px;
    border: 1px solid var(--accent-color);
    transition: all 0.4s ease;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.mess-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    
}

.mess-card h3 {
    font-size: 22px;
    color: var(--light-color1);
    margin-bottom: 15px;
}

.menu-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    border-radius: 10px;
    margin-bottom: 15px;
    transition: transform 0.3s ease;
    position: relative;
}

.mess-card:hover .menu-image {
    transform: scale(1.05);
}

.mess-card p {
    color: #ddd;
    font-size: 16px;
}

/* Update Info Styles */
.update-info {
    margin-top: 12px;
    padding: 8px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.update-date {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--light-color1);
    font-size: 13px;
    font-weight: 500;
}

.update-date i {
    font-size: 14px;
    color: var(--light-color1);
}

.update-date-text {
    color: var(--light-color1);
    font-weight: 600;
}

/* Live update indicator */
.update-date.live {
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
}

.image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.mess-card:hover .image-overlay {
    opacity: 1;
}

.image-overlay i {
    font-size: 50px;
    color: white;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 2000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    overflow: hidden;
    touch-action: none;
}

.modal-content-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    cursor: grab;
}

.modal-content-container.dragging {
    cursor: grabbing;
}

.modal-content {
    display: block;
    max-width: 90%;
    max-height: 90vh;
    border-radius: 10px;
    box-shadow: 0 0 30px rgba(52, 152, 219, 0.5);
    transition: transform 0.1s ease;
    transform-origin: 0 0;
    user-select: none;
}

.modal-header {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 10;
    display: flex;
    gap: 15px;
}

.modal-btn {
    
    border: 2px solid var(--accent-color);
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 24px;
    transition: all 0.3s;
    z-index: 20;
    opacity: 1;
    visibility: visible;
    min-width: 50px;
}

.modal-btn:hover {
    
    transform: scale(1.1);
}

.close-modal {
    font-size: 36px;
    font-weight: bold;
}

.mess-title {
    position: absolute;
    top: 20px;
    left: 20px;
    color: white;
    font-size: 24px;
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    z-index: 10;
    border: 2px solid var(--accent-color);
}

.zoom-controls {
    position: absolute;
    bottom: 20px;
    right: 20px;
    z-index: 10;
    display: flex;
    gap: 15px;
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    border: 2px solid var(--accent-color);
}

.zoom-btn {
    width: 45px;
    height: 45px;
    
    border: none;
    border-radius: 50%;
    color: white;
    font-size: 24px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    min-width: 45px;
    opacity: 1;
    visibility: visible;
}

.zoom-btn:hover {
    
    transform: scale(1.1);
}

.zoom-level {
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: white;
    font-size: 18px;
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    z-index: 10;
    border: 2px solid var(--accent-color);
}

.instructions {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-size: 16px;
    
    padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    border-radius: 10px;
    z-index: 10;
    border: 2px solid var(--accent-color);
    text-align: center;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .mess-menu-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
    .main-content {
        padding: calc(var(--header-height) + 20px) 20px 20px;
        max-width: 1000px;
    }
}

@media (max-width: 992px) {
    .sidebar {
        width: 240px;
        left: -240px;
    }
    .sidebar.active {
        left: 0;
    }
}

@media (max-width: 768px) {
    :root {
        --header-height: 70px;
    }
    .header {
        padding: 0 15px;
        height: 70px;
    }
    .header-actions {
        gap: 8px;
    }
    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }
    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }
    .logo img {
        height: 40px;
        margin-right: 8px;
    }
    .logo-text h1 {
        font-size: 18px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .user-name {
        display: none;
    }
    .user-profile {
        padding: 5px;
    }
    .user-avatar {
        width: 35px;
        height: 35px;
        font-size: 14px;
    }
    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }
    .sidebar {
        width: 100%;
        left: -100%;
    }
    .sidebar.active {
        left: 0;
    }
    .sidebar.active ~ .main-content::before {
        display: block;
    }
    .main-content {
        padding: calc(var(--header-height) + 15px) 18px 20px;
    }
    .mess-menu-section {
        padding: 25px;
    }
    .mess-card h3 {
        font-size: 20px;
    }
    .menu-image {
        height: 150px;
    }
    .modal-header {
        top: 10px;
        right: 10px;
    }
    .modal-btn {
        width: 40px;
        height: 40px;
        font-size: 20px;
        min-width: 40px;
    }
    .close-modal {
        font-size: 28px;
    }
    .mess-title {
        font-size: 18px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .zoom-controls {
        bottom: 10px;
        right: 10px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .zoom-btn {
        width: 36px;
        height: 36px;
        font-size: 20px;
        min-width: 36px;
    }
    .zoom-level {
        bottom: 10px;
        left: 10px;
        font-size: 16px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .instructions {
        font-size: 14px;
        bottom: 60px;
        width: 90%;
        max-width: 350px;
    }
}

@media (max-width: 576px) {
    :root {
        --header-height: 60px;
    }
    .header {
        height: 60px;
        padding: 0 12px;
    }
    .menu-toggle {
        width: 35px;
        height: 35px;
        margin-right: 10px;
    }
    .menu-toggle span {
        width: 22px;
        height: 2.5px;
    }
    .logo img {
        height: 35px;
        margin-right: 8px;
    }
    .logo-text h1 {
        font-size: 16px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .user-avatar {
        width: 30px;
        height: 30px;
        font-size: 12px;
    }
    .map-access {
        width: 32px;
        height: 32px;
        font-size: 16px;
    }
    .main-content {
        padding: calc(var(--header-height) + 12px) 15px 15px;
    }
    .mess-menu-grid {
        grid-template-columns: 1fr;
    }
    .mess-menu-section {
        padding: 20px;
    }
    .section-title {
        font-size: 22px;
    }
    .mess-card h3 {
        font-size: 18px;
    }
    .mess-card p {
        font-size: 14px;
    }
    
    .update-info {
        margin-top: 10px;
        padding: 6px 0;
    }
    
    .update-date {
        font-size: 12px;
    }
    .menu-image {
        height: 120px;
    }
    .modal-btn {
        width: 40px;
        height: 40px;
        font-size: 20px;
        min-width: 40px;
    }
    .close-modal {
        font-size: 28px;
    }
    .mess-title {
        font-size: 16px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .zoom-controls {
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .zoom-btn {
        width: 36px;
        height: 36px;
        font-size: 20px;
        min-width: 36px;
    }
    .zoom-level {
        font-size: 14px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .instructions {
        font-size: 12px;
        bottom: 50px;
        max-width: 300px;
    }
}

@media (max-width: 400px) {
    .logo-text h1 {
        font-size: 14px;
    }
    .logo-text span {
        font-size: 10px;
    }
    .section-title {
        font-size: 20px;
    }
    .mess-card h3 {
        font-size: 16px;
    }
    .mess-card p {
        font-size: 13px;
    }
    
    .update-info {
        margin-top: 8px;
        padding: 5px 0;
    }
    
    .update-date {
        font-size: 11px;
    }
    .modal-btn {
        width: 36px;
        height: 36px;
        font-size: 18px;
        min-width: 36px;
    }
    .close-modal {
        font-size: 24px;
    }
    .mess-title {
        font-size: 14px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .zoom-btn {
        width: 30px;
        height: 30px;
        font-size: 16px;
        min-width: 30px;
    }
    .zoom-level {
        font-size: 12px;
        padding: clamp(12px, 1.5vw, 16px) clamp(25px, 3vw, 40px);
    }
    .instructions {
        font-size: 11px;
        bottom: 40px;
        max-width: 280px;
    }
    .map-access {
        width: 30px;
        height: 30px;
        font-size: 14px;
    }
}